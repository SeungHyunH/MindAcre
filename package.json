{
  "name": "mind-acre",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "test": "pnpm run test:unit && pnpm run test:e2e",
    "test:unit": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --config jest-unit.config.mjs",
    "test:e2e": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --config jest-e2e.config.mjs"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "cross-env": "^10.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "ts-jest-resolver": "^2.0.1",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
